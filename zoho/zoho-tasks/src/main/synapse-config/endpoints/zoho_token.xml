<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="zoho_token" xmlns="http://ws.apache.org/ns/synapse">
    <address uri="https://accounts.zoho.com/oauth/v2/token">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1.0</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </address>
</endpoint>
